<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weather.Controller" prefHeight="300.0" prefWidth="400.0">
    <TextField fx:id="cityInput" promptText="Enter city name" layoutX="14.0" layoutY="14.0" />
    <Button fx:id="searchButton" text="Get Weather" layoutX="250.0" layoutY="14.0" onAction="#fetchWeather" />
    <TextArea fx:id="weatherDisplay" editable="false" layoutX="14.0" layoutY="50.0" prefWidth="360.0" prefHeight="200.0" />
</AnchorPane>
